---
const { url, title, date, readingTime } = Astro.props;
---

<li>
  <a href={url} data-astro-prefetch>
    <div class="title-date-wrapper">
      <span class="title">{title}</span>
      <span class="date"
        >{
          readingTime && (
            <div class="reading-time" aria-label="예상 읽기 시간">
              {/* <svg
                xmlns="http://www.w3.org/2000/svg"
                width="14"
                height="14"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                aria-hidden="true"
                class="clock-icon"
              >
                <circle cx="12" cy="12" r="10" />
                <polyline points="12 6 12 12 16 14" />
              </svg> */}
              <span>{readingTime}</span>
            </div>
          )
        }{date}</span
      >
    </div>
  </a>
</li>

<style>
  li {
    list-style: none;
  }

  a {
    display: block;
    text-decoration: none;
    padding-right: 1.25rem;
    margin-right: 0.25rem;
    transition: opacity 0.15s ease-in;

    &:hover {
      opacity: 1 !important;
      .title,
      .date {
        &::before {
          z-index: -1;
          display: block;
          content: "";
          background-color: var(--contrast-bg-color);
          position: absolute;
          top: -0.2rem;
          left: -0.4rem;
          right: -0.4rem;
          bottom: -0.2rem;
          border-radius: 0.4rem;
        }
      }
    }

    .title,
    .date {
      position: relative;
      line-height: 24px;
      &::before {
        display: block;
        content: "";
        background-color: transparent;
        transition: background-color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }
    }
  }

  .date {
    display: flex;
    white-space: nowrap;
    align-items: center;
  }

  .title-date-wrapper {
    margin-left: 15%;

    display: flex;
    justify-content: space-between;
    gap: 16px;
    flex: 1 1 0;

    padding-top: 0.75rem;
    padding-bottom: 0.75rem;
  }

  .reading-time {
    /* margin-left: 15%; */
    color: var(--gray-400);
    font-size: 0.6rem;
    line-height: 1.2;
    display: inline-flex;
    align-items: center;
    gap: 2px;
    margin-right: 10px;
  }
</style>
