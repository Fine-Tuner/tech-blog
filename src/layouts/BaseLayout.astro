---
import { ViewTransitions } from "astro:transitions";
import "../style/globalStyle.css";
import Blur from "../components/Blur.astro";
import ScrollContainer from "../components/ScrollContainer";

interface Props {
  pageTitle: string;
  description?: string;
  author?: string;
  keywords?: string;
  ogImage?: string;
}

const {
  pageTitle,
  description = "태준의 기술 블로그입니다. 개발 경험과 지식을 공유합니다.",
  author = "Taejoon Park",
  keywords = "개발, 프로그래밍, 웹개발, 기술블로그",
  ogImage = "/images/og-image.png",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="ko-kr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" /> -->

    <!-- Favicon -->
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/images/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/images/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/images/favicon-16x16.png"
    />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="shortcut icon" href="/images/favicon.ico" />
    <meta name="theme-color" content="#1E293B" />

    <!-- SEO Meta Tags -->
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <meta name="keywords" content={keywords} />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Taejoon's Tech Blog" />

    <!-- X (formerly Twitter) Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@ParkTaeJoonFE" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- JSON-LD Structured Data -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Blog",
        name: pageTitle,
        description: description,
        url: canonicalURL,
        image: ogImage,
        author: {
          "@type": "Person",
          name: "박태준",
          url: "http://taejoon.me",
        },
        publisher: {
          "@type": "Organization",
          name: "Taejoon's Tech Blog",
          logo: {
            "@type": "ImageObject",
            url: "/images/logo.png",
          },
        },
        mainEntity: {
          "@type": "ItemList",
          itemListElement: [
            {
              "@type": "ListItem",
              position: 1,
              name: "수첩",
              url: `${Astro.site}/note`,
            },
            {
              "@type": "ListItem",
              position: 2,
              name: "서재",
              url: `${Astro.site}/library`,
            },
            {
              "@type": "ListItem",
              position: 3,
              name: "학교",
              url: `${Astro.site}/learn`,
            },
            {
              "@type": "ListItem",
              position: 4,
              name: "도구",
              url: `${Astro.site}/tool`,
            },
          ],
        },
      })}
    />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <title>{pageTitle}</title>
    <style></style>
    <ViewTransitions />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="preload"
      href="/fonts/AritaBuri/AritaBuriKR-Medium.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <!-- <link
      rel="preload"
      href="/fonts/AritaBuri/AritaBuriKR-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/AritaDotum/AritaDotumKR-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/AritaDotum/AritaDotumKR-Medium.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    /> -->
    <script is:inline>
      const theme = localStorage.getItem("theme");

      if (
        theme === "dark" ||
        (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      }
    </script>
  </head>
  <body>
    <ScrollContainer client:only="react">
      <Blur />
      <slot />
    </ScrollContainer>
  </body>
</html>
