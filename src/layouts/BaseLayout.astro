---
// import { ViewTransitions } from "astro:transitions";
import "../style/globalStyle.css";
import Blur from "../components/Blur.astro";
import ScrollContainer from "../components/ScrollContainer";

interface Props {
  pageTitle?: string;
  description?: string;
  author?: string;
  keywords?: string;
  ogImage?: string;
}

const {
  pageTitle,
  description = "태준의 기술 블로그입니다. 개발 경험과 지식을 공유합니다.",
  author = "Taejoon Park",
  keywords = "개발, 프로그래밍, 웹개발, 기술블로그",
  ogImage = "/images/og-image.png",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="ko-kr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- DNS 예비 연결 -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />

    <!-- Critical font CSS preload -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/taevel02/typeface-arita/arita.min.css"
    />

    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" /> -->

    <!-- Favicon -->
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/images/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/images/favicon-32x32.png"
    />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#1E293B" />

    <!-- Security and IE -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      http-equiv="Content-Security-Policy"
      content="upgrade-insecure-requests"
    />

    <!-- Mobile App -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />

    <!-- SEO Meta Tags -->
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <meta name="keywords" content={keywords} />
    <meta name="robots" content="index,follow" />
    <meta name="googlebot" content="index,follow" />
    <meta name="google" content="notranslate" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Taejoon's Tech Blog" />

    <!-- X (formerly Twitter) Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@ParkTaeJoonFE" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- JSON-LD Structured Data -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Blog",
        name: pageTitle,
        description: description,
        url: canonicalURL,
        image: ogImage,
        author: {
          "@type": "Person",
          name: "박태준",
          url: "http://taejoon.me",
        },
        publisher: {
          "@type": "Organization",
          name: "Taejoon's Tech Blog",
          logo: {
            "@type": "ImageObject",
            url: "/images/logo.png",
          },
        },
        mainEntity: {
          "@type": "ItemList",
          itemListElement: [
            {
              "@type": "ListItem",
              position: 1,
              name: "수첩",
              url: `${Astro.site}/note`,
            },
            {
              "@type": "ListItem",
              position: 2,
              name: "서재",
              url: `${Astro.site}/library`,
            },
            {
              "@type": "ListItem",
              position: 3,
              name: "학교",
              url: `${Astro.site}/learn`,
            },
            {
              "@type": "ListItem",
              position: 4,
              name: "도구",
              url: `${Astro.site}/tool`,
            },
          ],
        },
      })}
    />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-D3VJFYM52Z"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-D3VJFYM52Z");
    </script>

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <meta
      name="google-site-verification"
      content="qlnPlAut8zmLSxhzyi5xisaxJyHBiP9xDDMiPHw4y00"
    />

    <title>{pageTitle}</title>
    <style></style>
    <!-- <ViewTransitions /> -->
    <link rel="sitemap" href="/sitemap.xml" />

    <!-- Remove local font preloads as we're now using CDN -->
    <!-- <link
      rel="preload"
      href="/fonts/AritaBuri/AritaBuriKR-Medium.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    /> -->

    <script is:inline>
      const theme = localStorage.getItem("theme");

      if (
        theme === "dark" ||
        (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      }
    </script>
  </head>
  <body>
    <ScrollContainer client:only="react">
      <Blur />
      <slot />
    </ScrollContainer>
  </body>
</html>
